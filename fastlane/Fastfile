    export_options: {
      provisioningProfiles: {
        "xyz.vega.betawallet.iosextension" => "iOS Dist Extension",
        "xyz.vega.betawallet" => "iOS Dist"
      }
    },
    clean: true,
    output_directory: ".", # Destination directory. Defaults to current directory.
    output_name: "app.ipa",  
