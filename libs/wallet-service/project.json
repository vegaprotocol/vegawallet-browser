{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wallet-service/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "yarn tsc --project ./libs/wallet-service/tsconfig.lib.json"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/wallet-service/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          "npx esbuild libs/wallet-service/src/**/*.ts --outdir=dist/spec/libs/wallet-service --format=cjs --platform=node --tree-shaking=true --bundle",
          "cp libs/wallet-service/package.json dist/spec/libs/wallet-service/package.json",
          "yarn tape dist/spec/libs/wallet-service/**/*.spec.js"
        ]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "yarn tsc --noEmit --project ./libs/wallet-service/tsconfig.json"
      }
    }
  }
}
