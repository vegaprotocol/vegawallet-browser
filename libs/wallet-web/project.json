{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wallet-web/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "./libs/tooling:build",
      "options": {
        "name": "Vega Wallet",
        "description": "Vega Wallet Browser Extension",
        "popup": {
          "main": "libs/wallet-popup/src/index.tsx",
          "styles": "libs/wallet-popup/src/styles.css",
          "tsConfig": "libs/wallet-popup/tsconfig.lib.json"
        }
      },
      "configurations": {
        "firefox": {
          "outputPath": "dist/libs/wallet-web-firefox",
          "target": "firefox"
        },
        "chrome": {
          "outputPath": "dist/libs/wallet-web-chrome",
          "target": "chrome"
        }
      }
    },
    "run": {
      "executor": "./libs/tooling:run",
      "configurations": {
        "firefox": {
          "target": "firefox"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/wallet-web/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/wallet-web"],
      "options": {
        "jestConfig": "libs/wallet-web/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "yarn tsc --noEmit --project ./libs/wallet-web/tsconfig.json"
      }
    },
    "build-spec": {
      "executor": "nx:run-commands",
      "outputs": [],
      "options": {
        "command": "yarn tsc --project ./libs/wallet-web/tsconfig.spec.json"
      }
    }
  }
}
