{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wallet-web/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "./libs/tooling:build",
      "options": {
        "name": "Vega Wallet",
        "description": "Vega Wallet Browser Extension",
        "tsConfig": "libs/wallet-web/tsconfig.lib.json",
        "popup": {
          "main": "libs/wallet-web/src/popup/index.tsx",
          "styles": "libs/wallet-web/src/popup/styles.css",
          "tsConfig": "libs/wallet-web/tsconfig.lib.json"
        },
        "background": {
          "main": "libs/wallet-web/src/background/index.ts",
          "tsConfig": "libs/wallet-web/tsconfig.lib.json"
        },
        "content": {
          "main": "libs/wallet-web/src/content/index.tsx",
          "tsConfig": "libs/wallet-web/tsconfig.lib.json"
        }
      },
      "configurations": {
        "firefox": {
          "outputPath": "dist/libs/wallet-web-firefox",
          "target": "firefox"
        },
        "chrome": {
          "outputPath": "dist/libs/wallet-web-chrome",
          "target": "chrome"
        }
      }
    },
    "run": {
      "executor": "./libs/tooling:run",
      "configurations": {
        "firefox": {
          "target": "firefox"
        }
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/tooling/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
