{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/wallet-web/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "./libs/tooling:build",
      "options": {
        "name": "Vega Wallet",
        "description": "Vega Wallet Browser Extension",
        "background": {
          "main": "libs/wallet-web/src/background.ts",
          "tsConfig": "libs/wallet-web/tsconfig.lib.json"
        },
        "popup": {
          "main": "libs/wallet-popup/src/index.tsx",
          "styles": "libs/wallet-popup/src/styles.css",
          "tsConfig": "libs/wallet-popup/tsconfig.lib.json"
        }
      },
      "configurations": {
        "firefox": {
          "outputPath": "dist/libs/wallet-web-firefox",
          "target": "firefox"
        },
        "chrome": {
          "outputPath": "dist/libs/wallet-web-chrome",
          "target": "chrome"
        }
      }
    },
    "run": {
      "executor": "./libs/tooling:run",
      "configurations": {
        "firefox": {
          "target": "firefox"
        }
      }
    }
  }
}
