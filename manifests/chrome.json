{
  "manifest_version": 3,
  "action": {
    "chrome_style": false,
    "default_icon": {
      "16": "16x16.png",
      "32": "32x32.png",
      "48": "48x48.png",
      "64": "64x64.png",
      "96": "96x96.png",
      "128": "128x128.png",
      "512": "512x512.png"
    },
    "default_title": "Vega Browser Wallet",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["/in-page.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
