{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-extension@vega.xyz",
      "strict_min_version": "52.0"
    }
  },
  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "16": "16x16.png",
      "32": "32x32.png",
      "48": "48x48.png",
      "64": "64x64.png",
      "96": "96x96.png",
      "128": "128x128.png",
      "512": "512x512.png"
    },
    "default_title": "Vega Browser Wallet",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'",
  "web_accessible_resources": ["/in-page.js"]
}
