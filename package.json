  "private": true,
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@vegaprotocol/crypto": "0.11.0",
    "@vegaprotocol/protos": "0.5.0",
    "@vegaprotocol/tailwindcss-config": "^0.0.2",
    "@vegaprotocol/ui-toolkit": "0.12.1",
    "archiver": "^5.3.1",
    "date-fns": "^2.29.3",
    "deepmerge": "^4.3.1",
    "ethers": "5.7.1",
    "graphql": "15.8.0",
    "immer": "^10.0.2",
    "javascript-time-ago": "^2.5.9",
    "lodash": "^4.17.21",
    "mutexify": "^1.4.0",
    "protobuf-codec": "^1.0.6",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "7.39.1",
    "react-router-dom": "^6.10.0",
    "react-time-ago": "^7.2.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "url": "^0.11.0",
    "web-vitals": "^2.1.4",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "scripts": {
    "build": "rollup -c",
    "build:test": "yarn build --wallet-config=test",
    "build:fairground": "yarn build --wallet-config=fairground",
    "build:mainnet": "yarn build --wallet-config=mainnet",
    "dev": "web-ext run --start-url=examples/sample-dapp/index.html",
    "dev:chrome": "yarn dev --source-dir=build/chrome --target=chromium",
    "dev:firefox": "yarn dev --source-dir=build/firefox --devtools --firefox=firefoxdeveloperedition",
    "format": "prettier frontend --check",
    "format:write": "yarn format --write",
    "lint": "eslint --ext js,ts,tsx frontend",
    "test:backend": "jest --config=test/jest-config/jest.config-backend.js",
    "test:backend:ci": "yarn test:backend --coverage",
    "test:e2e": "jest ./test/e2e --config=test/jest-config/jest.config-e2e.js --maxWorkers=1",
    "test:e2e:chrome": "BROWSER=chrome yarn test:e2e",
    "test:e2e:firefox": "BROWSER=firefox yarn test:e2e",
    "test:e2e:firefox:ci": "HEADLESS=true yarn test:e2e:firefox",
    "test:frontend": "jest --config=test/jest-config/jest.config-ui.js",
    "test:frontend:ci": "yarn test:frontend --coverage",
    "watch": "yarn build -w"
  },
  "browserslist": {
    "production": [
      "last 10 chrome version",
      "last 10 firefox version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ],
    "test": [
      "last 10 chrome version",
      "last 10 firefox version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.4",
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-html": "^1.0.2",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-swc": "^0.1.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/archiver": "^5.3.2",
    "@types/chrome": "^0.0.231",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^16.18.23",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/selenium-webdriver": "^4.1.13",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "autoprefixer": "^10.4.14",
    "eslint-config-react-app": "^7.0.1",
    "glob": "^10.2.7",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-expect-message": "^1.1.3",
    "jest-junit": "^16.0.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "rollup": "^3.23.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "selenium-webdriver": "^4.8.2",
    "ts-jest": "^29.1.0",
    "web-ext": "^7.6.1"
  }
}
