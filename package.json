{
  "name": "vegawallet-browser",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@types/archiver": "^5.3.2",
    "@types/fs-extra": "^11.0.1",
    "@vegaprotocol/crypto": "^0.9.1",
    "@vegaprotocol/protos": "0.4.0",
    "@vegaprotocol/tailwindcss-config": "^0.0.2",
    "@vegaprotocol/ui-toolkit": "0.12.1",
    "archiver": "^5.3.1",
    "date-fns": "^2.29.3",
    "ethers": "5.7.1",
    "graphql": "15.8.0",
    "javascript-time-ago": "^2.5.9",
    "lodash": "^4.17.21",
    "mutexify": "^1.4.0",
    "protobuf-codec": "^1.0.6",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "7.39.1",
    "react-router-dom": "^6.10.0",
    "react-time-ago": "^7.2.1",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "url": "^0.11.0",
    "web-vitals": "^2.1.4",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "scripts": {
    "dev:chrome": "web-ext run --source-dir=build/chrome --target=chromium --start-url=examples/sample-dapp/index.html",
    "dev:firefox": "web-ext run --source-dir=build/firefox --firefox=firefoxdeveloperedition --start-url=examples/sample-dapp/index.html",
    "build": "INLINE_RUNTIME_CHUNK=false craco build",
    "build:chrome": "yarn build --build-chrome",
    "build:firefox": "yarn build --build-firefox",
    "format": "prettier src --check",
    "format:write": "prettier src --write",
    "lint": "eslint --ext js,ts,tsx src",
    "test": "react-scripts test",
    "test:ci": "JEST_JUNIT_OUTPUT_DIR=test-reports JEST_JUNIT_OUTPUT_NAME=unit-test-results.xml yarn test --testResultsProcessor=\"jest-junit\" --coverage",
    "eject": "react-scripts eject",
    "watch": "npm-watch",
    "test:backend": "jest --config=jest.config-backend.js",
    "test:e2e:chrome": "BROWSER=chrome jest ./test/e2e --config=jest.config-e2e.js --maxWorkers=1",
    "test:e2e:firefox": "BROWSER=firefox jest ./test/e2e --config=jest.config-e2e.js --maxWorkers=1",
    "test:e2e:firefox:ci": "HEADLESS=true yarn test:e2e:firefox"
  },
  "browserslist": {
    "production": [
      "last 10 chrome version",
      "last 10 firefox version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ],
    "test": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/chrome": "^0.0.231",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.23",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/selenium-webdriver": "^4.1.13",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "before-build-webpack": "^0.2.13",
    "glob": "^10.2.1",
    "jest": "^29.5.0",
    "jest-expect-message": "^1.1.3",
    "jest-junit": "^16.0.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.8.8",
    "react-scripts": "5.0.1",
    "selenium-webdriver": "^4.8.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "web-ext": "^7.6.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "watch": {
    "build:chrome": {
      "patterns": [
        "web-extension",
        "src"
      ],
      "ignore": "web-extension/common/validation/**/*.js",
      "extensions": "js,jsx,ts,tsx"
    }
  }
}
