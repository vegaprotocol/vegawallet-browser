{
  "name": "vegawallet-browser",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@vegaprotocol/crypto": "^0.7.1",
    "@vegaprotocol/protos": "0.4.0",
    "@vegaprotocol/tailwindcss-config": "^0.0.1",
    "@vegaprotocol/ui-toolkit": "0.7.0",
    "jest-junit": "^16.0.0",
    "lodash": "^4.17.21",
    "mutexify": "^1.4.0",
    "protobuf-codec": "^1.0.6",
    "react": "^18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "7.39.1",
    "react-router-dom": "^6.10.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "url": "^0.11.0",
    "web-vitals": "^2.1.4",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "scripts": {
    "dev:chrome": "web-ext run --source-dir=build/chrome --target=chromium --start-url=examples/sample-dapp/index.html",
    "dev:firefox": "web-ext run --source-dir=build/firefox --target=firefox-desktop --start-url=examples/sample-dapp/index.html",
    "build": "INLINE_RUNTIME_CHUNK=false craco build",
    "build:chrome": "yarn build --build-chrome",
    "build:firefox": "yarn build --build-firefox",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "npm-watch",
    "test:e2e-chrome": "jest ./test/e2e config=jest.config.js",
    "test:e2e-chrome-ci": "HEADLESS=true yarn test:e2e-chrome --ci"
  },
  "browserslist": {
    "production": [
      "last 10 chrome version",
      "last 10 firefox version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/chrome": "^0.0.231",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.23",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/selenium-webdriver": "^4.1.13",
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "before-build-webpack": "^0.2.13",
    "glob": "^10.2.1",
    "jest": "^29.5.0",
    "jest-expect-message": "^1.1.3",
    "npm-watch": "^0.11.0",
    "react-scripts": "5.0.1",
    "selenium-webdriver": "^4.8.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "web-ext": "^7.6.1"
  },
  "watch": {
    "build:chrome": {
      "patterns": [
        "web-extension",
        "src"
      ],
      "ignore": "web-extension/common/validation/**/*.js",
      "extensions": "js,jsx,ts,tsx"
    }
  }
}
