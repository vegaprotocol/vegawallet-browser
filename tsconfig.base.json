{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@vegaprotocol/tooling": ["libs/tooling/src/index.ts"],
      "@vegaprotocol/wallet-popup": ["libs/wallet-popup/src/index.ts"],
      "@vegaprotocol/wallet-service": ["libs/wallet-service/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
