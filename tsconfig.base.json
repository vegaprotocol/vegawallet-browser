{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "..",
    "jsx": "react-jsx",
    "inlineSourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@vegaprotocol/tooling": ["libs/tooling/src/index.ts"],
      "@vegaprotocol/wallet-popup": ["libs/wallet-popup/src/index.tsx"],
      "@vegaprotocol/wallet-service": ["libs/wallet-service/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
